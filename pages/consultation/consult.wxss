/* pages/consultation/consult.wxss */
page{
  background-color: #F8F8F8;
  font-size: 34rpx;
}

/* 头部图片开始 */
.head{
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: rgba(20, 219, 245, 0.925); */
  background-color: rgba(245, 222, 18, 0.678);
}

.head image{
  width: 100%;
  height: 280rpx;
}
/* 头部图片结束 */


/* 问诊表单开始 */
.body{
  padding: 25rpx;
}

.body .symptoms{
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  height: 500rpx;
  background-color: white;
}

.body .symptoms textarea{
  width: 100%;
  height: 100%;
}

.body .info{
  margin-top: 25rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.body .info .info-age{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.body .info .info-age input{
  width: 150rpx;
  border-bottom: 1rpx solid rgb(0, 140, 255);
}
/* 问诊表单结束 */


/* 提交按钮开始 */
.submit{
  margin: 0 25rpx;
  border-radius: 10rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(0, 204, 255);
  color: white;
}
/* 提交按钮结束 */


/* 提示开始 */
.tips{
  padding: 25rpx;
  font-size: 28rpx;
  color: #888888;
}
/* 提示结束 */