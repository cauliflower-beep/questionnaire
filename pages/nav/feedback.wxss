/* pages/nav/feedback.wxss */
page{
  background-color: #F0F0F0;
}

.container{
  padding: 25rpx;
}

.type{
  padding: 0 20rpx;
  border-radius: 10rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  color: #333;
}

.type .type-content{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.feedback{
  margin-top: 25rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  background-color: white;
}

.feedback .feedback-content{
  height: 600rpx;
}

.feedback .feedback-content textarea{
  width: 100%;
  height: 600rpx;
}

.feedback .feedback-contact{
  display: flex;
  justify-content: center;
  align-items: center;
}

.feedback .feedback-contact input{
  margin: 20rpx 0;
  border-radius: 10rpx;
  padding-left: 20rpx;
  width: 660rpx;
  height: 80rpx;
  background-color: #EEE;
}

.submit{
  margin-top: 25rpx;
  border-radius: 10rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(255, 145, 0);
  color: white;
}