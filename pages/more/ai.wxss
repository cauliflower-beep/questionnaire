/* pages/more/ai.wxss */
page{
  background-color: #F8F8F8;
}

scroll-view{
  height:1150rpx;
  padding-bottom:100rpx;
}

.reply .pic,
.send .pic{
  padding:20rpx;
}

.reply,
.send{
  display: flex;
}

.reply .pic image,
.send .pic image{
  width:80rpx;
  height:80rpx;
}

.send{
  justify-content:flex-end; 
}

.reply .content{
  padding:20rpx 20rpx 20rpx 0;
  max-width:480rpx;
}

.send .content{
  padding:20rpx 0 20rpx 20rpx;
  max-width:480rpx;
}

.reply .content .text,
.send .content .text{ 
  background-color: #fff;
  border-radius: 10rpx;
  padding:20rpx;
}

.send .content .text{
  background-color: #78fd75;
}

.sendMessage{
  padding:20rpx;
  width: 710rpx;
  position: fixed;
  bottom:0;
  left:0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #eeeeee;
}

.message{
  border-bottom: 1rpx solid #10c90d;
  padding: 5rpx 10rpx;
  width: 550rpx;
  height: 60rpx;
}

.inputMsg{
  width: 100%;
  height: 60rpx;
}

.sendMessage .send{
  width: 130rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}