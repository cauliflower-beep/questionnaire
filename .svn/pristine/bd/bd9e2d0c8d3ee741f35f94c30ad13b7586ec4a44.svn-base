/* pages/index/consultation/registration.wxss */
page{
  background-color: #F8F8F8;
}

.container{
  padding: 25rpx;
}

.department{
  padding: 0 20rpx;
  border-radius: 10rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.department-active{
  background-color: white;
  color: #333;
}

.department-disabled{
  background-color: #eeeeee;
  color: #888888;
}

.department .department-content{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.body{
  padding: 25rpx;
  height: 700rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.body .register{
  border-radius: 50%;
  width: 300rpx;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 3rpx 3rpx #ccc;
  font-size: 46rpx;
  font-weight: 700;
}

.body .register-active{
  background-color: rgb(255, 0, 85);
  color: white;
}

.body .register-disabled{
  background-color: rgb(221, 225, 226);
  color: #888888;
}

.body .register image{
  width: 150rpx;
  height: 150rpx;
}